%%% -*- mode: erlang -*-

%% Require OTP version R13B04 or R14
{require_otp_vsn, "R13B04|R14"}.

%% Depends
{deps_dir, "../"}.
{deps, [{edown, "", {git, "git://github.com/norton/edown.git"}}
        , {ubf, "", {git, "git://github.com/norton/ubf.git"}}
        , {mochiweb, "", {git, "git://github.com/norton/mochiweb.git"}}
       ]}.

%% Erlang compiler options
{erl_opts, [debug_info, warnings_as_errors
            , {i, "../ubf/include/"}
            , {platform_define, "R13", 'old_inets'}
           ]}.

%% Erlang edoc options
{edoc_opts, [{doclet, edown_doclet}
             , {src_path, ["src", "test"]}
             , {title, "Universal Binary Format and JSON-RPC"}
             , {top_level_readme, {"./README.md", "https://github.com/norton/ubf-jsonrpc"}}
            ]}.

%% EUnit options
{eunit_opts, [verbose]}.
